# Etapa de construcción con Maven
FROM maven:3.9.3-eclipse-temurin-17 AS builder

WORKDIR /app

# Copiar archivos de Maven primero (para cachear dependencias)
COPY pom.xml .
COPY src ./src

# Construir la aplicación
RUN mvn clean package -DskipTests

# Etapa final con JRE
FROM eclipse-temurin:17-jre

# Set workdir
WORKDIR /app

# Install curl only and keep image small
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Create non-root user and copy artifact with correct ownership
RUN groupadd -r spring && useradd -r -g spring spring
COPY --from=builder --chown=spring:spring /app/target/*.jar app.jar
USER spring

# Expose port
EXPOSE 3002

# Variables de entorno
ENV SPRING_PROFILES_ACTIVE=docker
ENV SERVER_PORT=3002

# Healthcheck will be handled by docker-compose (actuator endpoint)

# Start
ENTRYPOINT ["java", "-jar", "app.jar"]
