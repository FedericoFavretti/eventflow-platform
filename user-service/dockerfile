# Imagen base
FROM node:18-alpine

WORKDIR /app

# Copiar package.json primero (para mejor cache de Docker)
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el c√≥digo fuente
COPY . .

# Exponer puerto
EXPOSE 3001

# Variables de entorno
ENV NODE_ENV=production
ENV PORT=3001

# Comando de inicio
CMD ["npm", "start"]